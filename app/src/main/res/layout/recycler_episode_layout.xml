<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_episode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_recycler_view"
    app:cardCornerRadius="@dimen/card_corner_radius_recycler_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout_image_epi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_episode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_main" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_name_epi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_image_epi">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:text="@string/name_recycler_view_episode"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_name_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:shadowColor="@color/black"
                android:shadowDx="1.7"
                android:shadowDy="1.7"
                android:shadowRadius="2.7"
                android:textColor="@android:color/white"
                android:textSize="@dimen/name_text"
                android:textStyle="italic"
                tools:text="User name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_episode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_name_epi">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:text="@string/episode_recycler_view_episode"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_number_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_text"
                android:textStyle="italic"
                tools:text="User species" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_air_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_episode">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:text="@string/air_date_recycler_view_episode"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_air_date_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_text"
                android:textStyle="italic"
                tools:text="User status" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>